@model project

<form asp-action="SaveAddedData" asp-controller="project">
    <div asp-validation-summary="All"></div>
   @*  <div class="form-group">

        <input type="hidden" asp-for="Pnum" />
    </div> *@
    <div class="form-group">
        <label asp-for="Pname">project Name</label>
        <input type="text" class="form-control" asp-for="Pname" aria-describedby="emailHelp" placeholder="project name..">
        <span asp-validation-for="Pname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Plocation">project loaction</label>
        <input type="text" class="form-control" asp-for="Plocation" placeholder="project location">
        <span asp-validation-for="Plocation"></span>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="inputState">Department</label>
                <select id="inputState" asp-for="Dnum" class="form-control">
                    @foreach (var item in ViewBag.dept_id)
                    {
                        <option value="@item.DNum">@item.dName</option>
                    }
                </select>
            </div>

        </div>
   
    <button type="submit" class="btn btn-primary">Add</button>
</form>



